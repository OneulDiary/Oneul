<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oneul.web.dao.FreeDiaryDao">

	<select id="get" resultType="com.newlecture.web.entity.FreeDiary">
		select * from FreeDiary where id=#{id}
	</select>

	<select id="getList"
		resultType="com.newlecture.web.entity.FreeDiary">
		select * from FreeDiary
		<!-- <where> -->
		<trim prefix="where" prefixOverrides="and | or">
			<if test="field != null">
				${field} like '%${query}%'
			</if>
			and hit=0
		</trim>
		<!-- </where> -->
		order by regdate desc
		LIMIT #{size} offset #{offset}
	</select>

	<select id="getListIn"
		resultType="com.newlecture.web.entity.FreeDiary">
		SELECT *
		FROM FreeDiary
		WHERE ID in
		<foreach item="id" index="index" collection="ids" open="("
			separator="," close=")">
			#{id}
		</foreach>
	</select>
	
	   <select id="getViewList" resultType="com.newlecture.web.entity.FreeDiaryw">
        select * from FreeDiary where ${param2} like '%${param3}%'
        order by regdate desc
    </select>
    
    <select id="getCount" resultType="int">
    	select count(id) from FreeDiary
    	where ${param1} like ='%${param2}%'
    </select>


</mapper>